<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="com.example.biydaalt.controller.LoginFormController"
      xmlns:fx="http://javafx.com/fxml"
      alignment="center"
      spacing="15"
      styleClass="login-pane"
      stylesheets="/com/example/css/login-styles.css">
    <!-- Title -->
    <Label text="Welcome to Lab Management System" styleClass="login-title"/>

    <!-- Form Area -->
    <GridPane alignment="center" hgap="10" vgap="10">
        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Enter your username"/>

        <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Enter your password"/>
    </GridPane>

    <!-- Buttons Area -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Login" fx:id="loginButton" styleClass="login-button"/>
        <Button text="Sign Up" fx:id="signupButton" styleClass="signup-button"/>
    </HBox>

    <!-- Error Message -->
    <Label fx:id="errorMessage" styleClass="error-label"/>
</VBox>
