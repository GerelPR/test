<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.biydaalt.controller.HomeScreenController" prefWidth="1200" prefHeight="800">

    <!-- Top Bar -->
    <top>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Region HBox.hgrow="ALWAYS" /> <!-- Push items to the right -->
            <VBox spacing="5" alignment="CENTER_RIGHT">
                <Label fx:id="usernameLabel" text="Username" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                <Label fx:id="userEmailLabel" text="user@example.com" style="-fx-font-size: 12px; -fx-text-fill: gray;" />
                <Label fx:id="userRoleLabel" text="ROle" style="-fx-font-size: 12px; -fx-text-fill: gray;" />
            </VBox>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="10" alignment="TOP_LEFT"
              style="-fx-background-color: #5A57F4; -fx-padding: 20;" 
              prefWidth="200">
            <Label text="Lab" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
            
            <!-- Navigation Buttons -->
            <VBox spacing="10">
                <Button text="Dashboard" fx:id="btnDashboard" onAction="#showDashboard" styleClass="nav-button" />
                <Button text="Add Job" fx:id="btnAddJob" onAction="#showAddJob" styleClass="nav-button" />
                <Button text="Print Barcode" fx:id="btnPrintBarcode" onAction="#showPrintBarcode" styleClass="nav-button" />
                <Button text="Input Result" fx:id="btnInputResult" onAction="#showInputResult" styleClass="nav-button" />
                <Button text="See Result" fx:id="btnSeeResult" onAction="#showSeeResult" styleClass="nav-button" />
                <Button text="Weight Job" fx:id="btnWeightJob" onAction="#showWeightJob" styleClass="nav-button" />
                <Button text="Import Job" fx:id="btnImportJob" onAction="#showImportJob" styleClass="nav-button" />
                <Button text="Search Job" fx:id="btnSearchJob" onAction="#showSearchJob" styleClass="nav-button" />
                <Button text="Settings" fx:id="btnSettings" onAction="#showSettings" styleClass="nav-button" />
                <Button text="Log Out" fx:id="btnLogout" onAction="#logout" style="-fx-text-fill: red; -fx-background-color: transparent;" />
            </VBox>
        </VBox>
    </left>

    <!-- Content Area -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 20;">
            <!-- Default content will be loaded here -->
        </StackPane>
    </center>
</BorderPane>
